<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:paddingTop="10dp"
	android:paddingBottom="10dp"
	android:paddingLeft="5dp"
	android:paddingRight="5dp"
	android:background="#FF222222"
>
	
	<LinearLayout 
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
	>

		<LinearLayout 
			android:layout_width="70dp" 
			android:layout_height="50dp"
			android:id="@+id/projectImage"
			android:layout_gravity="center_vertical"
		>
	
			<ImageView
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:src="@drawable/icon"			
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/projectIcon"
				android:layout_gravity="center_horizontal|center_vertical"
				android:maxHeight="50dp"
				android:maxWidth="50dp"
				android:scaleType="centerInside"
				android:adjustViewBounds="false"
			/>
		
		</LinearLayout>	
		
		<LinearLayout 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_toRightOf="@+id/projectImage"
			android:layout_marginLeft="10dp"
		>
			
			<TextView 
				android:text="" 
				android:id="@+id/projectTitle"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"			
				android:textSize="18dp"		
				android:textStyle="bold"
				android:textColor="#FFFFFFFF"
			/>	
			
			<TextView 
				android:text="" 
				android:id="@+id/projectDescription"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"			
				android:textSize="12dp"	
				android:textColor="#FFCCCCCC"
			/>		
				
		</LinearLayout>
		
	</LinearLayout>
	
	<LinearLayout 
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="wrap_content"
		android:layout_height="50dp"
		android:orientation="horizontal"
		android:layout_marginLeft="65dp"
		android:layout_marginTop="10px"
		android:layout_marginBottom="5px"
		android:id="@+id/installOptions"
	>
	
		<Button
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:text="Install"
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:layout_marginLeft="10dp"
			android:layout_gravity="center_vertical|right"
			android:id="@+id/installSelected"
			android:onClick="installSelected"
		/>
		
		<Button
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:text="Update"
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:layout_marginLeft="10dp"
			android:layout_gravity="center_vertical|right"
			android:id="@+id/updateSelected"
			android:onClick="updateSelected"
		/>
		
		<TextView 
			android:text="" 
			android:id="@+id/projectId"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"	
			android:visibility="gone"
		/>	
	
	</LinearLayout>
	
	<LinearLayout 
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginLeft="80dp"
	>
	
		<TextView 
			android:text="Downloads" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"			
			android:textSize="12dp"	
			android:textColor="#FFCCCCCC"
			android:layout_weight="1"
		/>	
	
		<TextView 
			android:text="" 
			android:id="@+id/projectDownloads"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"			
			android:textSize="14dp"	
			android:textColor="#FFFFFFFF"
			android:textStyle="bold"
			android:layout_weight="1"
		/>	
		
		<TextView 
			android:text="Version" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"			
			android:textSize="12dp"	
			android:textColor="#FFCCCCCC"
			android:layout_weight="1"
		/>	
		
		<TextView 
			android:text="" 
			android:id="@+id/projectVersion"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"			
			android:textSize="14dp"	
			android:textColor="#FFFFFFFF"
			android:textStyle="bold"
			android:layout_weight="1"
		/>	
	
	</LinearLayout>
	
</LinearLayout>

