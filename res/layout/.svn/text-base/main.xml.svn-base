<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:orientation="vertical"	
    android:padding="0dp"
    android:background="#FF333333"
>    
    
    <LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#FF111111"
	    android:paddingTop="10dp"
	    android:paddingBottom="10dp"
	    android:paddingLeft="20dp"
	    android:paddingRight="20dp"
	    android:id="@+id/top_header"
	>	    
	
	    <TextView 
			android:text="Feeditout Projects" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"			
			android:textSize="24dp"	
			android:textColor="#FFFFFFFF"
			android:textStyle="bold"
			android:layout_gravity="center_vertical"
		/>			
	
	</LinearLayout>
	
	<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="10dp"
	    android:paddingBottom="10dp"
	    android:paddingLeft="20dp"
	    android:paddingRight="20dp"
	    android:id="@+id/bottom_control_bar"
	    android:layout_alignParentBottom="true"	 
	    android:background="#FF111111"   
	>	    
		
		<Button
			android:text="Visit feeditout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:onClick="visit"
			android:layout_weight="1"
		/>		
		
		<Button
			android:text="Email Developer"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:onClick="email"
			android:layout_weight="1"
		/>	
	
	</LinearLayout>
	
	<LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="0dip"
	    android:layout_below="@id/top_header"
		android:layout_above="@id/bottom_control_bar"
		android:background="#FF333333"		
		android:layout_margin="20dp"
	>	
	
		<LinearLayout 
		    android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		>	    
		
		    <TextView 
				android:text="All feeditout projects are provided without any licence, are for educational purposes and the source code can be downloaded from feeditout.com free of charge.
				\n\nThis application provides the ability to easily install and update feeditout projects.\n\nBy using this and related projects you understand that there is" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"			
				android:textSize="14dp"	
				android:textColor="#FFFFFFFF"
				android:layout_gravity="center_vertical"
			/>				
		
		</LinearLayout>
		
		<LinearLayout 
		    android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		>	    
		
		    <TextView 
				android:text="1." 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"			
				android:textSize="14dp"	
				android:textColor="#FFFFFFFF"
				android:textStyle="bold"
				android:layout_gravity="center_vertical"
			/>	
			
			<TextView 
				android:text="No liability" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"			
				android:textSize="14dp"	
				android:textColor="#FFCCCCCC"
				android:layout_marginLeft="5dp"
				android:layout_gravity="center_vertical"
			/>		
		
		</LinearLayout>
		
	    <LinearLayout
		    android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		>	    
		
		    <TextView 
				android:text="2." 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"			
				android:textSize="14dp"	
				android:textColor="#FFFFFFFF"
				android:textStyle="bold"
				android:layout_gravity="center_vertical"
			/>	
			
			<TextView 
				android:text="No warranties" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"			
				android:textSize="14dp"	
				android:textColor="#FFCCCCCC"
				android:layout_marginLeft="5dp"
				android:layout_gravity="center_vertical"
			/>		
		
		</LinearLayout>
		
		<LinearLayout
		    android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		>	    
		
		    <TextView 
				android:text="associated with these projects" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"			
				android:textSize="14dp"	
				android:textColor="#FFFFFFFF"
				android:layout_gravity="center_vertical"			
			/>				
		
		</LinearLayout>	
		
		<LinearLayout
		    android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		>	    
		
		    <Button				
				android:text="I accept, show me the downloads!"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|right"
				android:onClick="accept"
			/>			
		
		</LinearLayout>
	
	</LinearLayout>

</RelativeLayout>
